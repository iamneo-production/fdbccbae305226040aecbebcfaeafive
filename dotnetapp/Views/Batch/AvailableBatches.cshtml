@model IEnumerable<Batch>
<h1>Available Batches</h1>
<hr/>
//startime endtime remaining
<br /><br />
<table border='1'>
    <thead>
        <tr>
             <td>@Html.DisplayNameFor(d=>d.BatchID)</td>
            <td>@Html.DisplayNameFor(d=>d.StartTime)</td>
            <td>@Html.DisplayNameFor(d=>d.EndTime)</td>
            <td>@Html.DisplayNameFor(d=>d.Capacity)</td>
            <td></td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach(var data in @Model)
        {
            <tr>
                <td>@data.BatchID</td>
                <td>@data.StartTime</td>
                <td>@data.EndTime</td>
                
                @{
                    int x=5 - @data.Capacity;
                }
                <td>@x</td>
                 @if(@x==0){
                 <td> Batch is full</td>
                 }
             else
             {<td><a asp-controller="Booking" asp-action="BatchEnrollmentForm" asp-route-id=@data.BatchID>Books</a>
                
                    @Html.ActionLink("Book","BatchEnrollmentForm","Booking" ,new {id=data.BatchID}) </td>}
                <td>
                    
                    

                </td>
            </tr>
        }
    </tbody>
</table>